FIXTURE_FILE_EXTENSIONS = [
    "jpeg",
    "jpg",
    "json",
    "pdf",
    "png",
]

FIXTURE_FILE_PATTERNS = [
    "fixtures/**/*.{}".format(ext)
    for ext in FIXTURE_FILE_EXTENSIONS
]

filegroup(
    name = "fixtures",
    srcs = glob(
        FIXTURE_FILE_PATTERNS,
        allow_empty = True,
    ),
    tags = ["manual"],
    visibility = ["//visibility:public"],
)

js_library(
    name = "fixtures_js",
    data = [":data"],
    tags = ["manual"],
    visibility = ["//visibility:public"],
)
